<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    {{> header}}
    <div class="container">
        <div class="d-flex justify-content-between">
            <div>
                <a class="me-4" href="/staff/viewCourses/create">Add</a>
                <a class="me-4" href="/staff/viewCourses/trash/store">Trash({{countDocumentsDeleted}})</a>
            </div>
            <div>
                <form method="get" action="/staff/viewCourses/search">
                    <input type="text" name="search" id="search">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>
        <table class="table table-hover">
            <thead class="bg-warning">
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Course</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Posting time</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#if courses}}
                {{#each courses}}
                <tr>
                    <th>{{sum @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.nameCategory}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.dateCreated}}</td>
                    <td>
                        <a href="/staff/viewCourses/{{this._id}}/edit">Edit</a><br>
                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-id="{{this._id}}">Delete</a><br>
                        <a href="/staff/viewCourses/{{this._id}}">Course details</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="6" class="text-center">You don't have a course yet.</td>
                </tr>
                {{/each}}
                {{else}}
                {{#if course}}
                <tr>
                    <th>1</th>
                    <td>{{course.name}}</td>
                    <td>{{course.nameCategory}}</td>
                    <td>{{course.description}}</td>
                    <td>{{course.dateCreated}}</td>
                    <td>
                        <a href="/staff/viewCourses/{{course._id}}/edit">Edit</a>
                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-id="{{course._id}}">Delete</a>
                        <a href="/staff/viewCourses/{{course._id}}">Course details</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan='6' class='text-center'>Can't find this course</td>
                </tr>
                {{/if}}
                {{/if}}
            </tbody>
        </table>
    </div>
    {{> footer}}
    <!-- Button trigger modal -->

    <!-- Modal -->
    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Course</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this course?
                </div>
                <div class="modal-footer">
                    <button id="btn-delete-course" type="button" class="btn btn-danger">Confirm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <form class="form-delete" method="post"></form>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let courseId;
            let deleteForm = document.querySelector('.form-delete')
            let btnDeleteCourse = document.querySelector('#btn-delete-course')
            let deleteModal = document.getElementById('deleteModal')
            deleteModal.addEventListener('show.bs.modal', function (event) {
                // Button that triggered the modal
                let button = event.relatedTarget
                // Extract info from data-bs-* attributes
                courseId = button.getAttribute('data-id')
            })
            btnDeleteCourse.onclick = () => {
                deleteForm.action = `/staff/viewCourses/${courseId}?_method=DELETE`;
                deleteForm.submit();
            }
        })
    </script>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>