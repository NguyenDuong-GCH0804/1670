<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-between">
            <div>
                <a class="me-4" href="/staff/viewCategory/create">Add</a>
            </div>
            <div>
                <form method="get" action="/staff/viewCategory/search">
                    <input type="text" name="search" id="search">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>
        <table class="table table-hover">
            <thead class="bg-warning">
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Posting time</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
            {{#if categories}}
                {{#each categories}}
                <tr>
                    <th>{{sum @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="/staff/viewCategory/{{this._id}}/edit">Edit</a>
                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-id="{{this._id}}">Delete</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4" class="text-center">You don't have a category yet.</td>
                </tr>
                {{/each}}
            {{else}}
                {{#if category}}
                <tr>
                    <th>1</th>
                    <td>{{category.name}}</td>
                    <td>{{category.createdAt}}</td>
                    <td>
                        <a href="/staff/viewCategory/{{category._id}}/edit">Edit</a>
                        <a href="">Delete</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan='5' class='text-center'>Can't find this category</td>
                </tr>
                {{/if}}
            {{/if}}
            </tbody>
        </table>
    </div>
    <!-- Button trigger modal -->

    <!-- Modal -->
    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this category?
                </div>
                <div class="modal-footer">
                    <button id="btn-delete-category" type="button" class="btn btn-danger">Confirm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <form class="form-delete" method="post"></form>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let categoryId;
            let deleteForm = document.querySelector('.form-delete')
            let btnDeleteCategory = document.querySelector('#btn-delete-category')
            let deleteModal = document.getElementById('deleteModal')
            deleteModal.addEventListener('show.bs.modal', function (event) {
                // Button that triggered the modal
                let button = event.relatedTarget
                // Extract info from data-bs-* attributes
                categoryId = button.getAttribute('data-id')
            })
            btnDeleteCategory.onclick = () => {
                deleteForm.action = `/staff/viewCategory/${categoryId}?_method=DELETE`;
                deleteForm.submit();
            }
        })
    </script>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>